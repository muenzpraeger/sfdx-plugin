{
    "name": "@muenzpraeger/sfdx-plugin",
    "description": "A plugin for the Salesforce CLI built by René Winkelmeyer.",
    "version": "0.5.0",
    "author": "René Winkelmeyer @muenzpraeger",
    "bugs": "https://github.com/muenzpraeger/sfdx-plugin/issues",
    "dependencies": {
        "@oclif/command": "1",
        "@oclif/config": "1",
        "@oclif/errors": "1",
        "@salesforce/command": "^3.0.1",
        "@types/fs-extra": "^9.0.1",
        "@types/recursive-readdir": "^2.2.0",
        "fs-extra": "^9.0.1",
        "recursive-readdir": "^2.2.2",
        "replace-in-file": "^6.1.0"
    },
    "devDependencies": {
        "@oclif/dev-cli": "1",
        "@oclif/plugin-help": "3",
        "@oclif/test": "^1.2.6",
        "@salesforce/dev-config": "2.0.0",
        "@types/chai": "4",
        "@types/jsforce": "1.9.19",
        "@types/mocha": "8",
        "@types/node": "14",
        "chai": "4",
        "eslint": "^7.6.0",
        "globby": "11",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "sinon": "9",
        "ts-node": "8",
        "tslib": "2",
        "typescript": "3.9"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "files": [
        ".oclif.manifest.json",
        "package-lock.json",
        "/lib",
        "/messages",
        "/resources"
    ],
    "homepage": "https://github.com/muenzpraeger/sfdx-plugin",
    "keywords": [
        "sfdx-plugin"
    ],
    "license": "CC0-1.0",
    "oclif": {
        "commands": "./lib/commands",
        "devPlugins": [
            "@oclif/plugin-help"
        ]
    },
    "repository": "muenzpraeger/sfdx-plugin",
    "scripts": {
        "postpack": "rm -f .oclif.manifest.json",
        "posttest": "tsc -p test --noEmit && tslint -p test -t stylish",
        "prepack": "rm -rf lib && tsc && oclif-dev manifest",
        "prepare": "rm -rf lib && tsc && oclif-dev manifest",
        "prettier": "prettier --write \"**/*.{json,md,ts}\"",
        "prettier:verify": "prettier --list-different \"**/*.{json,md,ts}\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{json,md,ts}": [
            "prettier --write"
        ]
    }
}
